<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% index = 1 %>
    <% peoples.each do |i, people| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= people[:name] %></td>
        <td><%= people[:count] %></td>
        <% index += 1 %>
      </tr>
    <% end %>
  </tbody>
</table>